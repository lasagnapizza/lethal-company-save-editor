<h1>Sign in</h1>

<%= form_with url: sessions_path, local: true do |form| %>
  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Sign in" %>
  </div>
<% end %>

<p>
  Don't have an account yet? <%= link_to "Sign up", new_user_path %>
</p>
